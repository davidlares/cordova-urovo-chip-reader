<?xml version='1.0' encoding='utf-8'?>
<widget id="com.stv.chip" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>CordovaChip</name>
    <description>
        A sample App with Chip Plugin for reading Chip cards
    </description>
    <author email="david.e.lares@gmail.com" href="https://davidlares.com">
        David E Lares S
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <hook type="before_run" src="scripts/before_run.sh" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
