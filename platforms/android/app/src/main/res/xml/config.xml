<?xml version='1.0' encoding='utf-8'?>
<widget id="com.stv.chip" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="ChipPlugin">
        <param name="android-package" value="com.stv.plugins.chip.ChipPlugin" />
    </feature>
    <name>CordovaChip</name>
    <description>
        A sample App with Chip Plugin for reading Chip cards
    </description>
    <author email="david.e.lares@gmail.com" href="https://davidlares.com">
        David E Lares S
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <hook src="scripts/before_run.sh" type="before_run" />
    <allow-intent href="market:*" />
    <preference name="loglevel" value="DEBUG" />
</widget>
